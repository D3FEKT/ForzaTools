<Page
    x:Class="ForzaTools.ForzaAnalyzer.Views.CreateZipPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ForzaTools.ForzaAnalyzer.ViewModels"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Spacing="16">
            <TextBlock Text="Create Forza ZIP" Style="{StaticResource TitleTextBlockStyle}"/>

            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBox Header="Zip Name" Text="{x:Bind ViewModel.ZipName, Mode=TwoWay}" PlaceholderText="Archive Name"/>

                <ComboBox Grid.Column="1" Header="Format" 
                          ItemsSource="{x:Bind ViewModel.Formats}" 
                          SelectedIndex="{x:Bind ViewModel.SelectedFormatIndex, Mode=TwoWay}"
                          HorizontalAlignment="Stretch"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                <Button Command="{x:Bind ViewModel.AddFilesCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="12"/>
                        <TextBlock Text="Add Files"/>
                    </StackPanel>
                </Button>
                <Button Command="{x:Bind ViewModel.AddFolderCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8B7;" FontSize="12"/>
                        <TextBlock Text="Add Folder"/>
                    </StackPanel>
                </Button>
                <Button Command="{x:Bind ViewModel.ClearListCommand}" Content="Clear List" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Margin="0,16" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Archive Contents" Style="{StaticResource SubtitleTextBlockStyle}" Margin="12,8"/>

                <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="vm:ZipItem">
                            <Grid Padding="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <FontIcon Glyph="{x:Bind Icon}" FontFamily="{ThemeResource SymbolThemeFontFamily}" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind FullPath}" FontSize="11" Opacity="0.6" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="{x:Bind Type}" Opacity="0.5" VerticalAlignment="Center" Margin="12,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" VerticalAlignment="Center" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

            <Button Command="{x:Bind ViewModel.CreateZipCommand}" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                    <TextBlock Text="Save Archive"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>