<Page
    x:Class="ForzaTools.ForzaAnalyzer.Views.MaterialsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ForzaTools.ForzaAnalyzer.ViewModels"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Spacing="12">
            <TextBlock Text="Material Library" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Manage and extract material blobs from ModelBins." Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7"/>

            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,12">
                <Button Command="{x:Bind ViewModel.ExtractMaterialsCommand}" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
                        <TextBlock Text="Extract Materials from Files"/>
                    </StackPanel>
                </Button>

                <Button Command="{x:Bind ViewModel.RefreshMaterialsCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
                        <TextBlock Text="Refresh Library"/>
                    </StackPanel>
                </Button>
                <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay}"/>
                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" VerticalAlignment="Center" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Margin="0,24,0,0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Saved Materials" Style="{StaticResource SubtitleTextBlockStyle}" Margin="16,12"/>

                <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Materials, Mode=OneWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="vm:MaterialDisplayItem">
                            <Grid Padding="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <FontIcon Glyph="&#xF56E;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Margin="0,0,16,0" FontSize="16"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind DataSize}" Opacity="0.5" FontSize="12" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>