<Page
    x:Class="ForzaTools.ForzaAnalyzer.Views.ModelViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ForzaTools.ForzaAnalyzer.ViewModels"
    xmlns:local="using:ForzaTools.ForzaAnalyzer.Views"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,1,0" Padding="12" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Model Inspector" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,12"/>

                <TextBlock Grid.Row="1" Text="Loaded Files" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8" VerticalAlignment="Top"/>
                <ScrollViewer Grid.Row="1" Margin="0,32,0,0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.FileGroups, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:FileGroupViewModel">
                                <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" IsExpanded="True" Margin="0,0,0,4">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <SymbolIcon Symbol="Folder" />
                                            <TextBlock Text="{x:Bind GroupName}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <ListView ItemsSource="{x:Bind Files}" IsItemClickEnabled="True" ItemClick="FileList_ItemClick" SelectionMode="Single">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="vm:FileViewModel">
                                                    <StackPanel Orientation="Horizontal" Spacing="8" Padding="2">
                                                        <FontIcon Glyph="&#xE8A5;" FontSize="12" FontFamily="{ThemeResource SymbolThemeFontFamily}" />
                                                        <TextBlock Text="{x:Bind FileName}" FontSize="13"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Expander.Content>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="2" Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,12"/>

                <TextBlock Grid.Row="3" Text="Meshes" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8" VerticalAlignment="Top"/>
                <ListView Grid.Row="3" x:Name="MeshList" Margin="0,32,0,0" 
                          ItemsSource="{x:Bind Meshes}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:ForzaMeshViewModel">
                            <CheckBox IsChecked="{x:Bind IsVisible, Mode=TwoWay}" Content="{x:Bind Name}" 
                                      Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="4" Spacing="10" Margin="0,16,0,0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0" Padding="0,12,0,0">
                    <TextBlock Text="Live Edit" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Grid ColumnSpacing="8" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Scale:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="ScaleX" PlaceholderText="X" Grid.Row="0" Grid.Column="1" TextChanged="Transform_TextChanged"/>
                        <TextBox x:Name="ScaleY" PlaceholderText="Y" Grid.Row="0" Grid.Column="2" TextChanged="Transform_TextChanged"/>
                        <TextBox x:Name="ScaleZ" PlaceholderText="Z" Grid.Row="0" Grid.Column="3" TextChanged="Transform_TextChanged"/>

                        <TextBlock Text="Pos:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                        <TextBox x:Name="TransX" PlaceholderText="X" Grid.Row="1" Grid.Column="1" TextChanged="Transform_TextChanged"/>
                        <TextBox x:Name="TransY" PlaceholderText="Y" Grid.Row="1" Grid.Column="2" TextChanged="Transform_TextChanged"/>
                        <TextBox x:Name="TransZ" PlaceholderText="Z" Grid.Row="1" Grid.Column="3" TextChanged="Transform_TextChanged"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" x:Name="ViewportContainer" Background="#202020">
            <Grid Background="#80000000" Visibility="{x:Bind IsLoading, Mode=OneWay}" Canvas.ZIndex="10">
                <ProgressRing IsActive="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Page>