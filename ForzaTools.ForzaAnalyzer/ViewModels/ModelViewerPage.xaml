<Page
    x:Class="ForzaTools.ForzaAnalyzer.Views.ModelViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ForzaTools.ForzaAnalyzer.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,1,0" Padding="12" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Model Inspector" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,12"/>

                <TextBlock Grid.Row="1" Text="Loaded Files" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8" VerticalAlignment="Top"/>
                <ListView Grid.Row="1" x:Name="FileList" Margin="0,32,0,0"
                          ItemsSource="{x:Bind ViewModel.Files, Mode=OneWay}" 
                          SelectionChanged="FileList_SelectionChanged"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="vm:FileViewModel">
                            <StackPanel Orientation="Horizontal" Spacing="8" Padding="4">
                                <SymbolIcon Symbol="Document"/>
                                <TextBlock Text="{x:Bind FileName}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border Grid.Row="2" Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,12"/>

                <TextBlock Grid.Row="3" Text="Meshes" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8" VerticalAlignment="Top"/>
                <ListView Grid.Row="3" x:Name="MeshList" Margin="0,32,0,0" 
                          ItemsSource="{x:Bind Meshes}"
                          SelectionChanged="MeshList_SelectionChanged"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBox Grid.Row="4" x:Name="ErrorLog" IsReadOnly="True" Height="150" Margin="0,12,0,0" 
                         PlaceholderText="Status log..." TextWrapping="Wrap" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="11"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1" x:Name="ViewportContainer" Background="#202020">
            <Grid Background="#80000000" Visibility="{x:Bind IsLoading, Mode=OneWay}" Canvas.ZIndex="10">
                <ProgressRing IsActive="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Page>